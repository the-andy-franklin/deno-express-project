{
	"tasks": {
		"dev": "deno run -A --watch --node-modules-dir main.ts"
	},
	"exclude": [
		"node_modules/**"
	],
	"lint": {
		"rules": {
			"tags": ["recommended"],
			"exclude": [
				"no-unused-vars"
			]
		}
	},
	"fmt": {
		"useTabs": true,
		"lineWidth": 90,
		"indentWidth": 2,
		"semiColons": true,
		"singleQuote": true,
		"proseWrap": "preserve"
	}
}
