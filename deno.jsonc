{
	"tasks": {
		"dev": "deno run --allow-read --allow-net --allow-env --watch --node-modules-dir main.ts",
		"start": "deno run --allow-read --allow-net --allow-env main.ts"
	},
	"include": [
		"./*.ts"
	],
	"exclude": [
		"node_modules/**"
	],
	"lint": {
		"rules": {
			"tags": ["recommended"],
			"exclude": [
				"no-unused-vars"
			]
		}
	},
	"fmt": {
		"useTabs": true,
		"lineWidth": 90,
		"indentWidth": 2,
		"semiColons": true,
		"singleQuote": true,
		"proseWrap": "preserve"
	}
}
